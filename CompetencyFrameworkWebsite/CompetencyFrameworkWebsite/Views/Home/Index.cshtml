@model CompetencyFrameworkWebsite.Models.TechnologyModel

@using CompetencyFrameworkWebsite.Controllers
@using Microsoft.Ajax.Utilities
@{
    ViewBag.Title = "Home Page";
}


@using (Html.BeginForm("Index", "Home"))
{
    <div style="padding: 10px">
        @Html.DropDownList("Technologies", new SelectList(Model.Technologies))
        <input type="submit" class="btn btn-default" value="Select">
    </div>
}

@{ 

    if (IsPost)
    {

        var uiDesigner = @Model.Technologies[0];
        var netEngineer = @Model.Technologies[1];
        var java = @Model.Technologies[2];
        var rpg = @Model.Technologies[3];
        var docsEngineer = @Model.Technologies[4];

        if (Model.Technologies.Selected == uiDesigner)
        {
            Model.JobTitles(uiDesigner);

        }
    }
    }
    

    


   



