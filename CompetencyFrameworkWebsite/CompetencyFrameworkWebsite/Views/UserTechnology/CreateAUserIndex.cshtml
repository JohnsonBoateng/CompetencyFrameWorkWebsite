@model CompetencyFrameworkWebsite.Models.JobModel
@using CompetencyFrameworkWebsite.Controllers
@using Microsoft.Ajax.Utilities
@{
    ViewBag.Title = "CreateAUserIndex";

}


@using (Html.BeginForm("SaveRecord", "Job", FormMethod.Post))
{
    List<SelectListItem> items = new List<SelectListItem>();
    <form>
        <div class = "form-group" style="padding: 10px">
            <h4>Create A User</h4>
            <br/>
            

            <div>
                <p><label class="col-md-4 control-label" >First Name:</label></p>
                <p><input type="text" class="form-control" placeholder=" " name="FirstName"></p>
                <p><label class="col-md-4 control-label">Last Name:</label></p>
                <p><input type="text" class="form-control" placeholder=" " name="LastName"></p>
                <p><label class="col-md-4 control-label">Email Address:</label></p>
                <p><input type="text" class="form-control" placeholder=" " name="EmailAddress"></p>
                <p><label class="col-md-4 control-label">Job Title:</label></p>
                
                @foreach (var job in Model.Jobs)
                {        
                    items.Add(new SelectListItem { Text = job.Title, Value = job.Id.ToString() });
                }
        
                @Html.DropDownList("JobTitles", items)
                 <input type="submit" class="btn btn-default" value="Submit"/>
            </div>      
           
        </div>
    </form>
    
}

